{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
     "allowJs": true,
     "types": ["node"],
     "typeRoots": ["@types", "node_modules/@types"],


  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue", "vite.config.ts", "node_modules/vuestic-ui", "src/main.ts", "src/components/sidebar/employeeRoutes.js", "src/components/sidebar/adminRoutes.js"],
  "exclude": ["node_modules/**/*"]
}
